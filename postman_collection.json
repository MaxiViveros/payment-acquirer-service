            "body": {
              "mode": "raw",
              "raw": "{\n  \"merchantId\": \"MERCHANT_002\",\n  \"amount\": 250.75,\n  \"currency\": \"EUR\",\n  \"cardToken\": \"tok_5100000000000008\",\n  \"cardExpiry\": \"03/2027\",\n  \"operationType\": \"PURCHASE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Payment with EUR currency"
          }
        }
      ]
    },
    {
      "name": "Transaction Queries",
      "item": [
        {
          "name": "1. Get Transaction by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/payments/{{transaction_id}}",
              "host": ["{{base_url}}"],
              "path": ["payments", "{{transaction_id}}"]
            },
            "description": "Retrieve a specific transaction by ID. Replace {{transaction_id}} with actual ID from payment response."
          }
        },
        {
          "name": "2. List All Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Get all transactions without filters"
          }
        },
        {
          "name": "3. Filter by Merchant ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/payments?merchantId=MERCHANT_001",
              "host": ["{{base_url}}"],
              "path": ["payments"],
              "query": [
                {
                  "key": "merchantId",
                  "value": "MERCHANT_001"
                }
              ]
            },
            "description": "Get all transactions for MERCHANT_001"
          }
        },
        {
          "name": "4. Filter by Status - APPROVED",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/payments?status=APPROVED",
              "host": ["{{base_url}}"],
              "path": ["payments"],
              "query": [
                {
                  "key": "status",
                  "value": "APPROVED"
                }
              ]
            },
            "description": "Get all approved transactions"
          }
        },
        {
          "name": "5. Filter by Status - DECLINED",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/payments?status=DECLINED",
              "host": ["{{base_url}}"],
              "path": ["payments"],
              "query": [
                {
                  "key": "status",
                  "value": "DECLINED"
                }
              ]
            },
            "description": "Get all declined transactions"
          }
        },
        {
          "name": "6. Filter by Merchant and Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/payments?merchantId=MERCHANT_001&status=APPROVED",
              "host": ["{{base_url}}"],
              "path": ["payments"],
              "query": [
                {
                  "key": "merchantId",
                  "value": "MERCHANT_001"
                },
                {
                  "key": "status",
                  "value": "APPROVED"
                }
              ]
            },
            "description": "Get approved transactions for MERCHANT_001"
          }
        },
        {
          "name": "7. Filter by Status - ERROR",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/payments?status=ERROR",
              "host": ["{{base_url}}"],
              "path": ["payments"],
              "query": [
                {
                  "key": "status",
                  "value": "ERROR"
                }
              ]
            },
            "description": "Get all transactions with errors"
          }
        }
      ]
