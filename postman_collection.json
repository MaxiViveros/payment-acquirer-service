  "item": [
    {
      "name": "Payment Processing",
      "item": [
        {
          "name": "1. Successful Payment - MERCHANT_001",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"merchantId\": \"MERCHANT_001\",\n  \"amount\": 100.50,\n  \"currency\": \"USD\",\n  \"cardToken\": \"tok_4532015112830366\",\n  \"cardExpiry\": \"12/2025\",\n  \"operationType\": \"PURCHASE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Process a valid payment transaction"
          }
        },
        {
          "name": "2. Payment - High Amount",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"merchantId\": \"MERCHANT_001\",\n  \"amount\": 7500.00,\n  \"currency\": \"USD\",\n  \"cardToken\": \"tok_5500000000000004\",\n  \"cardExpiry\": \"06/2026\",\n  \"operationType\": \"PURCHASE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Payment with high amount - may be declined by issuer"
          }
        },
        {
          "name": "3. Payment - Amount Exceeds Merchant Limit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"merchantId\": \"MERCHANT_003\",\n  \"amount\": 1500.00,\n  \"currency\": \"USD\",\n  \"cardToken\": \"tok_4111111111111111\",\n  \"cardExpiry\": \"12/2025\",\n  \"operationType\": \"PURCHASE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "MERCHANT_003 has limit of $1000, this should fail validation"
          }
        },
        {
          "name": "4. Payment - Blocked Card Pattern",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"merchantId\": \"MERCHANT_001\",\n  \"amount\": 50.00,\n  \"currency\": \"USD\",\n  \"cardToken\": \"4111111111111111\",\n  \"cardExpiry\": \"12/2025\",\n  \"operationType\": \"PURCHASE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Card token matches blocked pattern - should be rejected"
          }
        },
        {
          "name": "5. Payment - Unsupported Currency",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"merchantId\": \"MERCHANT_001\",\n  \"amount\": 100.00,\n  \"currency\": \"XXX\",\n  \"cardToken\": \"tok_4532015112830366\",\n  \"cardExpiry\": \"12/2025\",\n  \"operationType\": \"PURCHASE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Unsupported currency should be rejected"
          }
        },
        {
          "name": "6. Payment - Invalid Merchant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"merchantId\": \"INVALID_MERCHANT\",\n  \"amount\": 100.00,\n  \"currency\": \"USD\",\n  \"cardToken\": \"tok_4532015112830366\",\n  \"cardExpiry\": \"12/2025\",\n  \"operationType\": \"PURCHASE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Non-existent merchant should return 404"
          }
        },
        {
          "name": "7. Payment - Invalid Request Format",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"merchantId\": \"\",\n  \"amount\": -50.00,\n  \"currency\": \"US\",\n  \"cardToken\": \"\",\n  \"cardExpiry\": \"invalid\",\n  \"operationType\": \"PURCHASE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Invalid request with validation errors"
          }
        },
        {
          "name": "8. Payment - EUR Currency",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
